<% provide(:title, 'All users') %>
<h1>All users</h1>

<%== pagy_bootstrap_nav(@pagy) %>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for user, size: 50 %>
      <%= link_to user.name, user %>
      <% if current_user.admin? && !current_user?(user) %>
        | <%= link_to "delete", user, data: { "turbo-method": :delete,
                                              turbo_confirm: "You sure?" } %>
      <% end %>
    </li>
  <% end %>
</ul>

<%== pagy_bootstrap_nav(@pagy) %>